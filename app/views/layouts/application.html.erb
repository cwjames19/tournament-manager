<!DOCTYPE html>
<html>
<head>
  <title>Tournament Manager</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link type="text/css.sass" rel="stylesheet" href="/app/assets/stylesheets/application.css.sass">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
  <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Tournament Manager</a>
          <% if user_signed_in? %>
            <span class="nav navbar-nav navbar-left" id="current-user-email"><%= current_user.email %></span>
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">About</a></li>
          <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><a href="/users/sign_up">Sign Up</a></li>
            <li><a href="/users/sign_in">Sign In</a></li>
          <% end %>
        </ul>
      </div>
  </nav>
  
  <div class='flash'>
    <% if flash[:notice] %>
      <div class='alert alert-success'>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class='alert alert-danger'>
        <button type='button' class='close' data-dismiss='alert'>&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class='alert alert-warning'>
        <button type='button' class='close' data-dismiss='alert'>&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
